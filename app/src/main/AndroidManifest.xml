<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lester.jacob.lester_resume">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_shortcut_content_paste"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.InformationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.SettingsActivity"
            android:parentActivityName=".Activities.InformationActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lester.jacob.lester_resume.Activities.InformationActivity" />
        </activity>
        <activity android:name=".Activities.SkillsActivity"></activity>
    </application>

</manifest>